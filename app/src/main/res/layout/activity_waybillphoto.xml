<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_shape"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="28dp"
                android:textColor="@color/jetblack"
                android:text="拍照确认" />

            <ImageView
                android:id="@+id/car_photo_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/delete" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#050505"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="上传车尾45度角照片"
                    android:textSize="18dp"
                    android:textColor="@color/jetblack"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/car_tail_photo"
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/grayish"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/car_tail_reverse_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="点击添加照片"
                        android:textSize="20dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/car_tail_front_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_login"/>

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#050505"/>

        <!--上传保险卡正页 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="上传手持送货单和车牌照的组合照片"
                    android:textSize="18dp"
                    android:textColor="@color/jetblack"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/delivery_note_photo"
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/grayish"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/delivery_note_reverse_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="点击添加照片"
                        android:gravity="center"
                        android:textSize="20dp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/delivery_note_front_photo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_login"/>


            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#050505"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/car_photo_submission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:layout_marginRight="120dp"
                android:layout_marginLeft="120dp"
                android:text="提交"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>