<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.lulian.driver.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bacolor">

        <LinearLayout
            android:id="@+id/broker_layout_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/action_img_left"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/circulation" />

            <TextView
                android:id="@+id/action_txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="切换到车队长"
                android:textColor="#ffffff" />
        </LinearLayout>

 <TextView
     android:id="@+id/actionbroker_txt_content"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:text="发布货源"
     android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/action_layout_ba"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/action_img_right"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/msg" />

            <TextView
                android:id="@+id/action_txt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息"
                android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
