                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="未评价"
                                android:textColor="@color/somber1" />

                            <TextView
                                android:id="@+id/metxtpingjianum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(5)"
                                android:textColor="@color/somber1" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

