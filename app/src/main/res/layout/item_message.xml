<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/message_layout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_shape"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/orderid_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单待取货"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/order_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天 11:00"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/loading"/>
            <TextView
                android:id="@+id/orderid_txt_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖南长沙"
                android:textColor="@color/somber1"
                android:textSize="17dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/goend"/>

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/unload"/>
            <TextView
                android:id="@+id/orderid_txt_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广东深圳"
                android:textColor="@color/somber1"
                android:textSize="17dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/car1"/>
            <TextView
                android:id="@+id/order_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高栏车/9.6米/18吨"
                android:textColor="@color/somber"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/order_goods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="水果"
                android:layout_marginLeft="20dp"
                android:textColor="@color/somber"
                android:textSize="15dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/waybill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运单编号:"/>

            <TextView
                android:id="@+id/order_number"
                android:layout_toRightOf="@id/waybill_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="181029658978"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未读"
                android:layout_alignParentRight="true"
                android:textColor="@color/red1"
                android:id="@+id/msg_txt_state" />

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>