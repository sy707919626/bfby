<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/title_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_shape"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/jetblack"
                android:textSize="15dp"
                android:text="+86"/>

            <com.lulian.driver.view.wheel.ClearEditText
                android:id="@+id/forgetpwd_edit_name"
                android:layout_width="match_parent"
                android:hint="请输入手机号码"
                android:background="@null"
                android:textSize="15dp"
                android:textColor="@color/somber"
                android:inputType="number"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="40dp">
            <com.lulian.driver.view.wheel.ClearEditText
                android:id="@+id/forgetpwd_edit_code"
                android:layout_weight="4"
                android:layout_width="wrap_content"
                android:background="@drawable/edit_shape"
                android:hint="输入验证码"
                android:textColor="@color/somber"
                android:textSize="15dp"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/forgetpwd_btn_getcode"
                android:layout_weight="1"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:text="获取验证码"
                android:background="@drawable/button_shape"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:id="@+id/forgetpwd_btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:textColor="@color/white"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="下一步"/>


    </LinearLayout>
</RelativeLayout>