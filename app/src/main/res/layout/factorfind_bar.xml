<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/factor_layout_msg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/qianhui"
        android:visibility="visible">

        <TextView
            android:id="@+id/factor_txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:text="广告文字或通知文字显示栏"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/factor_img_msgdelete"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/delete" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/factor_ll_start"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/factor_txt_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="起始地"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/factor_img_start"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/down1" />
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#050505" />

        <LinearLayout
            android:id="@+id/factor_ll_end"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/factor_txt_end"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="目的地"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/factor_img_end"
                android:layout_width="0dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/down1" />
        </LinearLayout>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#050505" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/factor_spinner_grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:spinnerMode="dialog"
                android:theme="@style/common_spinner"/>

        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#050505" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/factor_spinner_fistance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:spinnerMode="dialog"
                android:theme="@style/common_spinner"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#050505" />

</LinearLayout>
