<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <!--完善资料图片上传布局 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/paper_txt_title1"
                android:layout_width="wrap_content"
                android:text="上传手持身份证照"
                android:textSize="15dp"
                android:textColor="@color/jetblack"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="*"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/paper_layout_uploadidcardfront"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/grayish"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/paper_txt_title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="上传头像"
                    android:textSize="20dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/paper_img_img1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_login" />

        </LinearLayout>

</LinearLayout>

    <!--身份证正反面-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#050505"/>

    <LinearLayout
        android:id="@+id/paper_layout_idcard"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/paper_txt_titlefront"
                android:layout_width="wrap_content"
                android:text="上传身份证正反面照"
                android:textSize="15dp"
                android:textColor="@color/jetblack"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="*"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/paper_img_front"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_login"/>

                <ImageView
                    android:id="@+id/paper_img_reverse"
                    android:layout_weight="1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/icon_login"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/paper_layout_front"
                        android:layout_width="120dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:background="@color/grayish"
                        android:layout_weight="1"
                        android:layout_height="120dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="+"
                            android:textSize="20dp"/>
                        <TextView
                            android:id="@+id/paper_layout_front_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="正面"
                            android:gravity="center"
                            android:textSize="20dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/paper_layout_reverse"
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayish"
                    android:layout_weight="1"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/paper_layout_reverse_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="反面"
                        android:gravity="center"
                        android:textSize="20dp"/>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#050505"/>

    <!--驾驶证正反面-->
    <LinearLayout
        android:id="@+id/paper_layout_JScard"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/paper_txt_JStitlefront"
                android:layout_width="wrap_content"
                android:text="上传驾驶证正反面照"
                android:textSize="15dp"
                android:textColor="@color/jetblack"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="*"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/paper_img_JSfront"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_login"/>

                <ImageView
                    android:id="@+id/paper_img_JSreverse"
                    android:layout_weight="1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/icon_login"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/paper_layout_JSfront"
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:background="@color/grayish"
                    android:layout_weight="1"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/paper_layout_front_JStxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="正面"
                        android:gravity="center"
                        android:textSize="20dp"/>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/paper_layout_JSreverse"
                    android:layout_width="120dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@color/grayish"
                    android:layout_weight="1"
                    android:layout_height="120dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="20dp"/>
                    <TextView
                        android:id="@+id/paper_layout_reverse_JStxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="反面"
                        android:gravity="center"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>